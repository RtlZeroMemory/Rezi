{
  "name": "@rezi-ui/ink-compat",
  "version": "0.1.0-alpha.34",
  "description": "Drop-in Ink compatibility layer powered by Rezi's rendering engine.",
  "license": "Apache-2.0",
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./testing": {
      "types": "./dist/testing/index.d.ts",
      "default": "./dist/testing/index.js"
    },
    "./shims/ink-spinner": {
      "types": "./dist/shims/ink-spinner.d.ts",
      "default": "./dist/shims/ink-spinner.js"
    },
    "./shims/ink-gradient": {
      "types": "./dist/shims/ink-gradient.d.ts",
      "default": "./dist/shims/ink-gradient.js"
    }
  },
  "files": ["dist/", "README.md", "!dist/**/__tests__/**", "!dist/**/__e2e__/**"],
  "engines": {
    "node": ">=18",
    "bun": ">=1.3.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json --pretty false",
    "test": "CONCURRENCY=$(node -p \"parseInt(process.versions.node)>=19?'--test-concurrency=1':''\") && node --test $CONCURRENCY $(find dist -type f -path '*/__tests__/*.test.js' | LC_ALL=C sort)"
  },
  "dependencies": {
    "@rezi-ui/core": "0.1.0-alpha.34",
    "@rezi-ui/node": "0.1.0-alpha.34"
  },
  "devDependencies": {
    "@types/react": "^18.2.0 || ^19.0.0",
    "@types/react-reconciler": "^0.28.0"
  },
  "peerDependencies": {
    "react": "^18.2.0 || ^19.0.0",
    "react-reconciler": "^0.29.0 || ^0.30.0 || ^0.31.0"
  }
}
